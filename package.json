{
  "name": "@elixira/elixira",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --concurrency=50%",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "docs": "pnpm -- turbo run dev --filter=ui --no-cache"
  },
  "devDependencies": {
    "@elixira/eslint-config": "workspace:*",
    "@elixira/typescript-config": "workspace:*",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
